<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary</item>
        <item name="colorControlNormal">@color/primary</item>
    </style>

    <style name="AppEditText" parent="@style/Theme.AppCompat">
        <item name="android:textColorHint">@color/cell_divider</item>
        <item name="colorAccent">@color/cell_divider</item>
        <item name="colorControlNormal">@color/cell_divider</item>
        <item name="colorControlActivated">@color/cell_divider</item>
        <item name="android:textColorHighlight">@color/cell_divider</item>
        <item name="android:textColorLink">@color/cell_divider</item>
    </style>

    <style name="AppEditTextStyle" parent="@style/Theme.AppCompat">
        <item name="android:textColorHint">@color/cell_divider</item>
        <item name="colorAccent">@color/cell_divider</item>
        <item name="colorControlNormal">@color/cell_divider</item>
        <item name="colorControlActivated">@color/cell_divider</item>
        <item name="android:textColorHighlight">@color/cell_divider</item>
        <item name="android:textColorLink">@color/cell_divider</item>
    </style>

    <style name="AppRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="colorControlNormal">@color/cell_divider</item>
        <item name="colorControlActivated">@color/cell_divider</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="InputDisable" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/cell_divider</item>
    </style>

    <!-- Toolbar -->
    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

</resources>
